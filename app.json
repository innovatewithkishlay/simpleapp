{
  "expo": {
    "name": "WordWise",
    "slug": "SimpleApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "simpleapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "WordWise - Premium Vocabulary and Pronunciation App",
    "sdkVersion": "53.0.0",
    "platforms": ["ios", "android", "web"],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kishlay_012.SimpleApp",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses microphone for voice search",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition for voice search"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.kishlay_012.SimpleApp",
      "versionCode": 1,
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      ["expo-font"]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1b8704b4-7ecc-4536-bf4b-e2630f1a78ac"
      }
    }
  }
}
